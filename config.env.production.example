# SendWalk 生产环境配置示例
# 复制到 backend/.env 并根据实际情况修改

# 应用配置
APP_NAME=SendWalk
APP_ENV=production
APP_KEY=  # 将由 php artisan key:generate 生成
APP_DEBUG=false
APP_URL=https://edm.sendwalk.com
APP_TIMEZONE=Asia/Shanghai

# 日志配置
LOG_CHANNEL=daily
LOG_LEVEL=warning
LOG_DAILY_DAYS=30

# 数据库配置
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=sendwalk
DB_USERNAME=sendwalk
DB_PASSWORD=  # 请修改为强密码

# 缓存和队列
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# 邮件配置（系统通知用）
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-domain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@sendwalk.com
MAIL_PASSWORD=  # 请修改
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@sendwalk.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS SES 配置（如果使用）
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# 前端 URL
FRONTEND_URL=https://edm.sendwalk.com

# CORS 配置
SANCTUM_STATEFUL_DOMAINS=edm.sendwalk.com
SESSION_DOMAIN=.edm.sendwalk.com

# 安全配置
BCRYPT_ROUNDS=12

# SendLog 清理配置（天）
SENDLOG_RETENTION_DAYS=30

# 日志文件清理配置（天）
LOG_FILE_RETENTION_DAYS=30

